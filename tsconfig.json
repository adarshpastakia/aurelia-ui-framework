{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "paths": {
      "aurelia-ui-framework/*": ["./src/aurelia-ui-framework/*"],
      "aurelia-ui-framework": ["./src/aurelia-ui-framework"],
      "@images/*": ["./images/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./examples/**/*.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
