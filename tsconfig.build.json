{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "baseUrl": ".",
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": [".vscode", "dist", "doc", "node_modules", "test"]
}
